doctype html
html(lang='en')
  head
    title #{title}
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    .container
     .navbar.navbar-default(role='navigation')
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') NodeAuth
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            if user
             li(class=(title == 'Members' ? 'active' : ''))
               a(href='/users') Members
            if !user
             li(class=(title == 'Register' ? 'active' : ''))
               a(href='/users/register') Register
             li(class=(title == 'Login' ? 'active' : ''))
               a(href='/users/login') Login
             li
               a(href='/users/roles') Roles
             li
               a(href='/posts/add') Add Post
          ul.nav.navbar-nav.navbar
            li.dropdown
               a.dropdown-toggle(type='button', data-toggle='dropdown')
                  | Categories
                  span.caret
                ul.dropdown-menu.ul.nav.navbar-nav
                  li
                    a(href='/categories/') Show
                  li
                    a(href='/categories/add') Add
                  
          ul.nav.navbar-nav.navbar-right
           if user
            li
               a(href='/users/logout') Logout
          
     if messages               
      != messages()
     block content
     
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='/javascripts/bootstrap.js')
    script(src='/javascripts/default.js')
    