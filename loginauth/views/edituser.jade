extends layout

block content
 h2.page-header #{title}
 form(method='post', action='/users/edituser',enctype='multipart/form-data')
  .form-group
   label Name
   input.form-control(name='name', type='text', placeholder='Enter Name', value=user.name)
  .form-group.hide
   label ID
   input.form-control(name='id', type='text', placeholder='Enter Name', value=user._id)
  .form-group
   label Email
   input.form-control(name='email', type='email', placeholder='Enter Email', value=user.email)
  .form-group
   label Username
   input.form-control#username(name='username', type='text', placeholder='Enter Username', value=user.username, Validator.getValue('username'))
  .form-group
      label(for='sel1') Select Role:
      |   
      select#sel1.form-control(name='role')
        each item in roles
         option(selected=(item.role == user.role ? 'selected' : '')) #{item.role}
         |     
        
  .form-group
   label Profile Image 
   <br>
   input.form-control.hide(name='profileimage',class='edituserimage', type='file')
   input.form-control.hide(name='profileimagetext',class='edituserimage', type='text' value=user.profileimage)
   img(src= "/uploads/"+user.profileimage, width="150px", id="edituserimage") 
  input.btn.btn-primary(type='submit', name='submit',value='Edit User')