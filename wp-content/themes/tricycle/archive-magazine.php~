    <?php
    //to fetch the latest topic

    $topicsfetch = array(
        'type' => 'article',
        'child_of' => 0,
        'parent' => '',
        'orderby' => 'DATE',
        'order' => 'DESC',
        'hide_empty' => 0,
        'hierarchical' => 1,
        'exclude' => '',
        'include' => '',
        'number' => '',
        'taxonomy' => 'magazine-issue',
        'pad_counts' => false
    );
    $topicsfinal = get_categories($topicsfetch);
    //pr($topicsfinal);
     $upload_dir = wp_upload_dir();
     
    foreach ($topicsfinal as $category) {
        $category->term_id;
        $category->name;
        $t_id = $category->term_id;
        $term_meta = get_option("taxonomy_term_$t_id");
        echo $term_meta['cover_image'];
    }
    ?>
