/**
 * This function returns the featured image of base or hero template.
 * @param integer $post_id
 * @return string
 */
function get_base_hero_template_featured_image($post_id)
{
    $base_hero_template_featured_image = get_post_meta($post_id, BASE_HERO_TEMPLATE_FEATURED_IMAGE, TRUE);
    $is_featured_image_set_as_base_and_hero_template_featured_image = get_post_meta($post_id, FEATURED_IMAGE_AS_BASE_HERO_TEMPLATE_FEATURED_IMAGE, TRUE);
    
    if($base_hero_template_featured_image)
    {
        $upload_dir = wp_upload_dir();
        $upload_baseurl = $upload_dir['baseurl'];
        $attachment_id = $base_hero_template_featured_image['attachment_id'];
        
        //$attachment_meta_data = wp_get_attachment_metadata($base_hero_template_featured_image['attachment_id']);
        
        $attachment = get_post($attachment_id);
        $image_alt = get_post_meta($attachment->ID, '_wp_attachment_image_alt', true);
        $image_caption = $attachment->post_excerpt;
        $image_description = $attachment->post_content;
        $image_title = $attachment->post_title;
        
        $attachment_meta_data['ID'] = $attachment_id;
        $attachment_meta_data['featured_image_url'] = $upload_baseurl.'/'.$base_hero_template_featured_image['attachment_image'];
        $attachment_meta_data['alt'] = $image_alt;
        $attachment_meta_data['caption'] = $image_caption;
        $attachment_meta_data['description'] = $image_description;
        $attachment_meta_data['title'] = $image_title;
        $attachment_meta_data['use_default_featured_image'] = 1;
        return $attachment_meta_data;
    }
    else if($is_featured_image_set_as_base_and_hero_template_featured_image == 1)
    {
        $attachment_meta_data['use_default_featured_image'] = 1;
        return $attachment_meta_data;
    }
    else
    {
        return;
    }
}

