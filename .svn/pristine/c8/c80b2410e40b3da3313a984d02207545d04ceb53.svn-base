/**
 * This function returns all the terms of magazines issue taxonomy.
 * @return Array
 */
function get_magazine_issue_terms() {
    $args = array(
        'orderby' => 'id',
        'order' => 'DESC',
        'hide_empty' => false
    );

    $terms = get_terms(MAGAZINE_POST_ISSUE_TAXONOMY, $args);
    if ($terms) {
        foreach ($terms as $term) {
            $term->term_url = get_term_link($term, MAGAZINE_POST_ISSUE_TAXONOMY);
        }
    }
    return $terms;
}

/**
 * This function returns all the terms of topic taxonomy.
 * @return Array
 */
function get_topic_terms() {
    $args = array(
