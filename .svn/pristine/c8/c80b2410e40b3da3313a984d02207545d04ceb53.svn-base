/**
 * This function is used to filter the records on the basis of magazine issue in admin.
 * @global type $pagenow
 * @param type $query
 */
function magazine_issue_posts_filter($query) {
    global $pagenow;
    $type = MAGAZINE_POST_TYPE;

    if (isset($_GET['post_type'])) {
        $type = $_GET['post_type'];
    }

    if ($type == MAGAZINE_POST_TYPE && is_admin() && $pagenow == 'edit.php' && isset($_GET[MAGAZINE_POST_ISSUE_TAXONOMY]) && $_GET[MAGAZINE_POST_ISSUE_TAXONOMY] != '') {
        if ($_GET[MAGAZINE_POST_ISSUE_TAXONOMY] == 'none') {
            $var = &$query->query_vars[MAGAZINE_POST_ISSUE_TAXONOMY];
            $taxonomy_terms = get_terms(MAGAZINE_POST_ISSUE_TAXONOMY, array(
                'hide_empty' => 0,
                'fields' => 'ids'
            ));

            $query->set('tax_query', array(
                array(
                    'taxonomy' => MAGAZINE_POST_ISSUE_TAXONOMY,
                    'field' => 'id',
                    'terms' => $taxonomy_terms,
                    'operator' => 'NOT IN'
                )
            ));
            $var = '';
        } else {
            $var = &$query->query_vars[MAGAZINE_POST_ISSUE_TAXONOMY];
            if (isset($var) && $var != 0) {
                $term = get_term_by('id', $var, MAGAZINE_POST_ISSUE_TAXONOMY);
                $var = $term->slug;
            }
        }
    }

    if (($type == MAGAZINE_POST_TYPE || $type == "post") && is_admin() && $pagenow == 'edit.php' && isset($_GET[TOPIC_TAXONOMY]) && $_GET[TOPIC_TAXONOMY] != '') {
        if ($_GET[TOPIC_TAXONOMY] == 'none') {
            $var1 = &$query->query_vars[TOPIC_TAXONOMY];
            $taxonomy_terms1 = get_terms(TOPIC_TAXONOMY, array(
                'hide_empty' => 0,
                'fields' => 'ids'
            ));

            $query->set('tax_query', array(
                array(
                    'taxonomy' => TOPIC_TAXONOMY,
                    'field' => 'id',
                    'terms' => $taxonomy_terms1,
                    'operator' => 'NOT IN'
                )
            ));
            $var1 = '';
        } else {
            $var1 = &$query->query_vars[TOPIC_TAXONOMY];
            if (isset($var1) && $var1 != 0) {
                $term1 = get_term_by('id', $var1, TOPIC_TAXONOMY);
                $var1 = $term1->slug;
            }
        }
    }
}

