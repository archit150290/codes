function add_morevideos_dharmatalks($post)
{
    $counter_videos = get_post_meta($post->ID, "countervideos_dharmatalks", true);
        if(!$counter_videos){
            //to give first value to i
            $counter_videos = '5';
        }
    ?>
    <div id="morevideos">
        <input type="hidden" value="<?php echo $counter_videos;?>" id="countervideos" name="countervideos">
            <?php if($counter_videos){
                $count_more = 5; 
                for($i = 5; $i<$counter_videos; $i++)
                {
                    $title = get_post_meta($post->ID, "dharma_talks_video".$i."_title" , true);
                    $url = get_post_meta($post->ID, "dharma_talks_video".$i."_url", true);
                    $time_length = get_post_meta($post->ID, "dharma_talks_video".$i."_time_length", true);
                    if(empty($title) && empty($url) && empty($time_length)){
                        continue;
                    }
                    $upload_dir = wp_upload_dir();
                    $savepdffile = get_post_meta($post->ID, "upload_file_pdf_video_".$i, true);
                    if (!empty($savepdffile)) {
                        $upload_baseurl = $upload_dir['baseurl'] . '/' . $savepdffile;
                    } else {
                        $upload_baseurl = "";
                    }?>
                    <div id="video_<?php echo $i?>">
                        <label><b>Video <?php echo $count_more;?></b></label></br>
                        <label>Title:</label><div style="clear: both;"></div>
                        <input type="text" id="dharma_talks_video<?php echo $i; ?>_title" name="dharma_talks_video<?php echo $i; ?>_title" style="width: 100%;" value="<?php echo $title;?>" />
                        <label>URL:</label><div style="clear: both;"></div>
                        <input type="text" name="dharma_talks_video<?php echo $i; ?>_url" style="width: 100%;" value="<?php echo $url;?>" />
                        <label>Time Length (In Minutes):</label><div style="clear: both;"></div>
                        <input type="text" name="dharma_talks_video<?php echo $i; ?>_time_length" style="width: 15%;" maxlength="4" value="<?php echo $time_length;?>" />
                        <div style="clear: both;"></div><label>Transcripts PDF URL:</label><div style="clear: both;"></div>
                        <?php
                        $htmlvideo = '<input readonly id="upload_file_pdf_video_'.$i.'" type="text" size="90%" name="upload_file_pdf_video_'.$i.'" value="' . $upload_baseurl . '" />';
                        $htmlvideo .='<input type="button" onclick = upload_meta_image("upload-PDF","upload_file_pdf_video_'.$i.'") id="upload_file_pdf_video_'.$i.'" value="Upload PDF" />';
                        $htmlvideo .='<input type = "submit" class="removemore" name="video_'.$i.'" value = "Remove Video '.$count_more.'">';
                        echo $htmlvideo . "<br>";?>
                    </div>
                <?php
                $count_more++;
                }
            }
            ?>
       <!-- More Videos will be added here-->
    </div>
    <p id=""><a id="addmorevideo" href="javascript:void(0)">Add More</a></p>
    <script>
    jQuery(document).ready(function(){
        var i = <?php echo $counter_videos;?>;
        jQuery(document).on('click','#addmorevideo',function(){
            jQuery('<div id="video_'+i+'"><label><br><b>Another Video</b></label></br>').appendTo('#morevideos');
            jQuery('<label>Title</label><input type = "text" style="width:100%" name="dharma_talks_video'+i+'_title" >').appendTo('#video_'+i);
            jQuery('<label>URL</label><input type = "text" style="width:100%" name="dharma_talks_video'+i+'_url" >').appendTo('#video_'+i);
            jQuery('<label>Time Length (In Minutes):</label><input type = "text" style="width:100%" name="dharma_talks_video'+i+'_time_length" >').appendTo('#video_'+i);
            jQuery('<label>Transcripts PDF URL:</label></br><input readonly id="upload_file_pdf_video_'+i+'" type="text" size="90%" name="upload_file_pdf_video_'+i+'"/>').appendTo('#video_'+i);
            jQuery('<input type="button" onclick = upload_meta_image("upload-PDF","upload_file_pdf_video_'+i+'") id="upload_file_pdf_video_'+i+'" value="Upload PDF" />').appendTo('#video_'+i);
