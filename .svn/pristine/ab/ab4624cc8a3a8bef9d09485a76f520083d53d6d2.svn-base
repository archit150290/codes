// ebooks article page
////////////////////////
.article_ebooks-contents {

  @include media($desktop-up) {
    @include span-columns(10 of 12);
    @include shift;
  }

  > h1 {
    @include padding($base-spacing $base-spacing * 2 null null);
    border-top: 2px solid $clr-ebooks;
    display: inline-block;
    margin-bottom: 0;

    @include media($tablet-up) {
      margin-bottom: $small-spacing;
    }
  }

  ol {
    counter-reset: li;

    > li {
      @include margin($base-spacing null null $base-spacing * 1.5);
      @include padding(0 $small-spacing 0 0);
      list-style: none;
    }

    > li:before {
      color: $clr-black;
      content: counter(li) '.';
      counter-increment: li;
      float: left;
      font-family: $gill-sans;
      font-size: 1.25em;
      font-weight: bold;
      line-height: 1.25;
      margin-left: $base-spacing * -1.2;
      width: $base-spacing * 1.2;
    }

    > li:last-of-type {
      border-bottom: 0;
    }

    h1,
    address {
      display: inline;
    }

    h1 {
      font-size: 1.25em;
      line-height: 1.2;
      margin-bottom: 0;
    }

    address {
      color: $clr-gray-midhi;
      margin-left: $base-spacing / 3;
    }
  }

  .rule {
    @include padding(null 0);
  }
}

.article_ebooks-boilerplate {
  @include media($desktop-up) {
    @include span-columns(10 of 12);
    @include shift;
  }
}
