<?php
/*
  Template Name:ebooks data
 */
?>

<?php
$searchYear = $_GET['searchyear'];
$exist_post_id = $_GET['postid'];
$postId = json_decode($exist_post_id);
?>

    <?php
    $args = array(
        'posts_per_page' => 3,
        'orderby' => 'post_date',
        'post__not_in' => $postId,
        'order' => 'DESC',
        'year' => $searchYear,
        'post_type' => FILM_CLUB_POST_TYPE,
        'post_status' => 'publish',
        'suppress_filters' => true
    );

    $queryfirst = new WP_Query($args);
    query_posts($queryfirst);
    $count = 1;

    $i = 1;
    while ($queryfirst->have_posts()) : $queryfirst->the_post();
        $postId[] = $queryfirst->post->ID;
        $count;
        $topicSet = get_the_terms(get_the_ID(), "topic");
        $topicName = isset($topicSet[0]) ? $topicSet[0]->name : "";
        $topicSlug = isset($topicSet[0]) ? $topicSet[0]->slug : "";

        $publish_date = get_the_date('M Y');
        ?>
        
         <div class='archive-item'>
                    <figure class='archive-cover_filmclub'>
                        <a href='<?php the_permalink(); ?>'>
                            <div class="icon-video_play" data-grunticon-embed></div>
                            <?php echo srcset_post_thumbnail(get_the_ID(), 'image', ''); ?>
                        </a>
                    </figure>

                    <header class='archive-titles'>
                        <time><?php echo $publish_date; ?></time>
                        <h2 class='topic filmclub'><a href='<?php getTopicUrl($topicSlug); ?>'><?php echo $topicName; ?></a></h2>
                        <h1><a href='<?php the_permalink(); ?>'><?php the_title(); ?></a></h1>
                        <address><?php echo ucfirst(get_post_meta(get_the_ID(), 'authors_name_metabox', true)); ?></address>
                    </header>
                </div>

        <?php $count++ ?>
        <?php
        if ($i == 12) {
            break;
        }
    endwhile;
    wp_reset_query();
    ?>

<?php if ($count > 3) { ?>
    <div class='more filmclub'> 
        <?php $onclick = 'onclick=loadmoreajax("' . $searchYear . '","' . json_encode($postId) . '");' ?>
        <a id="loadMore" class="button" href="javascript:void(0)" <?php echo $onclick ?> >Load More</a>
    </div>
<?php } ?>