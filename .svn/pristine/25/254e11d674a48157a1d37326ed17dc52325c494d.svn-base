function save_dharma_talks_meta_box_data( $post_id ) 
{
    /*
     * We need to verify this came from our screen and with proper authorization,
     * because the save_post action can be triggered at other times.
     */

    // Check if our nonce is set.
    if ( ! isset( $_POST['dharmatalks_meta_box_nonce'] ) ) 
    {
        return;
    }

    // Verify that the nonce is valid.
    if ( ! wp_verify_nonce( $_POST['dharmatalks_meta_box_nonce'], 'dharmatalks_save_meta_box_data' ) ) 
    {
        return;
    }

    // If this is an autosave, our form has not been submitted, so we don't want to do anything.
    if ( defined( 'DOING_AUTOSAVE' ) && DOING_AUTOSAVE ) 
    {
        return;
    }

    // Check the user's permissions.
    if ( isset( $_POST['post_type'] ) && 'page' == $_POST['post_type'] ) 
    {
        if ( ! current_user_can( 'edit_page', $post_id ) ) 
        {
            return;
        }

    } 
    else 
    {
        if ( ! current_user_can( 'edit_post', $post_id ) ) 
        {
            return;
        }
    }

    /* OK, it's safe for us to save the data now. */

    // Sanitize user input.
    $dharma_talks_shorttrailer = sanitize_text_field( $_POST['dharma_talks_shorttrailer'] );

    // Update the meta field in the database.
    update_post_meta($post_id, 'meta_type_dharmatalks_shorttrailer', $dharma_talks_shorttrailer);
    
     $dharma_talks_data1 = sanitize_text_field( $_POST['dharma_talks_video1'] );

    // Update the meta field in the database.
    update_post_meta($post_id, 'meta_type_dharmatalks_url1', $dharma_talks_data1);
    
    $dharma_talks_data2 = sanitize_text_field( $_POST['dharma_talks_video2'] );

    // Update the meta field in the database.
    update_post_meta($post_id, 'meta_type_dharmatalks_url2', $dharma_talks_data2);
    
     $dharma_talks_data3= sanitize_text_field( $_POST['dharma_talks_video3'] );

    // Update the meta field in the database.
    update_post_meta($post_id, 'meta_type_dharmatalks_url3', $dharma_talks_data3);
    
     $dharma_talks_data4= sanitize_text_field( $_POST['dharma_talks_video4'] );

    // Update the meta field in the database.
    update_post_meta($post_id, 'meta_type_dharmatalks_url4', $dharma_talks_data4);
    
   
    
   
}

/**
 * This action hook is called to call "save_film_club_meta_box_data".
 */
add_action('save_post', 'save_dharma_talks_meta_box_data');