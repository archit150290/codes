function save_dharma_talks_meta_box_data( $post_id ) 
{
    /*
     * We need to verify this came from our screen and with proper authorization,
     * because the save_post action can be triggered at other times.
     */

    // Check if our nonce is set.
    if ( ! isset( $_POST['dharmatalks_meta_box_nonce'] ) ) 
    {
        return;
    }

    // Verify that the nonce is valid.
    if ( ! wp_verify_nonce( $_POST['dharmatalks_meta_box_nonce'], 'dharmatalks_save_meta_box_data' ) ) 
    {
        return;
    }

    // If this is an autosave, our form has not been submitted, so we don't want to do anything.
    if ( defined( 'DOING_AUTOSAVE' ) && DOING_AUTOSAVE ) 
    {
        return;
    }

    // Check the user's permissions.
    if ( isset( $_POST['post_type'] ) && 'page' == $_POST['post_type'] ) 
    {
        if ( ! current_user_can( 'edit_page', $post_id ) ) 
        {
            return;
        }

    } 
    else 
    {
        if ( ! current_user_can( 'edit_post', $post_id ) ) 
        {
            return;
        }
    }

    /* OK, it's safe for us to save the data now. */

    // Sanitize user input and update the meta field in the database.
    update_post_meta($post_id, DHARMA_TALKS_TRAILER_TITLE_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_TRAILER_TITLE_META_KEY]));
    update_post_meta($post_id, DHARMA_TALKS_TRAILER_TITLE_URL_FORMAT_META_KEY, sanitize_title(sanitize_text_field($_POST[DHARMA_TALKS_TRAILER_TITLE_META_KEY])));
    update_post_meta($post_id, DHARMA_TALKS_TRAILER_URL_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_TRAILER_URL_META_KEY]));
    update_post_meta($post_id, DHARMA_TALKS_TRAILER_TIME_LENGTH_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_TRAILER_TIME_LENGTH_META_KEY]));
    update_post_meta($post_id, DHARMA_TALKS_TRAILER_TRANSCRIPTS_PDF_URL_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_TRAILER_TRANSCRIPTS_PDF_URL_META_KEY]));
    
    // Update the meta field in the database.
    update_post_meta($post_id, DHARMA_TALKS_VIDEO1_TITLE_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_VIDEO1_TITLE_META_KEY]));
    update_post_meta($post_id, DHARMA_TALKS_VIDEO1_URL_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_VIDEO1_URL_META_KEY]));
    update_post_meta($post_id, DHARMA_TALKS_VIDEO1_TIME_LENGTH_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_VIDEO1_TIME_LENGTH_META_KEY]));
    update_post_meta($post_id, DHARMA_TALKS_VIDEO1_TRANSCRIPTS_PDF_URL_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_VIDEO1_TRANSCRIPTS_PDF_URL_META_KEY]));
    
    update_post_meta($post_id, DHARMA_TALKS_VIDEO2_TITLE_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_VIDEO2_TITLE_META_KEY]));
    update_post_meta($post_id, DHARMA_TALKS_VIDEO2_URL_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_VIDEO2_URL_META_KEY]));
    update_post_meta($post_id, DHARMA_TALKS_VIDEO2_TIME_LENGTH_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_VIDEO2_TIME_LENGTH_META_KEY]));
    update_post_meta($post_id, DHARMA_TALKS_VIDEO2_TRANSCRIPTS_PDF_URL_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_VIDEO2_TRANSCRIPTS_PDF_URL_META_KEY]));
    
    update_post_meta($post_id, DHARMA_TALKS_VIDEO3_TITLE_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_VIDEO3_TITLE_META_KEY]));
    update_post_meta($post_id, DHARMA_TALKS_VIDEO3_URL_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_VIDEO3_URL_META_KEY]));
    update_post_meta($post_id, DHARMA_TALKS_VIDEO3_TIME_LENGTH_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_VIDEO3_TIME_LENGTH_META_KEY]));
    update_post_meta($post_id, DHARMA_TALKS_VIDEO3_TRANSCRIPTS_PDF_URL_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_VIDEO3_TRANSCRIPTS_PDF_URL_META_KEY]));
    
    update_post_meta($post_id, DHARMA_TALKS_VIDEO4_TITLE_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_VIDEO4_TITLE_META_KEY]));
    update_post_meta($post_id, DHARMA_TALKS_VIDEO4_URL_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_VIDEO4_URL_META_KEY]));
    update_post_meta($post_id, DHARMA_TALKS_VIDEO4_TIME_LENGTH_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_VIDEO4_TIME_LENGTH_META_KEY]));
    update_post_meta($post_id, DHARMA_TALKS_VIDEO4_TRANSCRIPTS_PDF_URL_META_KEY, sanitize_text_field($_POST[DHARMA_TALKS_VIDEO4_TRANSCRIPTS_PDF_URL_META_KEY]));
    
    $home_featured_post = isset($_POST['home_featured']) ? $_POST['home_featured'] : "";
    update_post_meta($post_id, HOME_FEATURED_META_KEY, $home_featured_post);
}

