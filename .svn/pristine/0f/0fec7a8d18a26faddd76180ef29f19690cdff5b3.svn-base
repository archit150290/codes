function save_dharma_talks_meta_box_data($post_id) {
    
    /*
     * We need to verify this came from our screen and with proper authorization,
     * because the save_post action can be triggered at other times.
     */

    // Check if our nonce is set.
    if (!isset($_POST['dharmatalks_meta_box_nonce'])) {
        return;
    }

    // Verify that the nonce is valid.
    if (!wp_verify_nonce($_POST['dharmatalks_meta_box_nonce'], 'dharmatalks_save_meta_box_data')) {
        return;
    }

    // If this is an autosave, our form has not been submitted, so we don't want to do anything.
    if (defined('DOING_AUTOSAVE') && DOING_AUTOSAVE) {
        return;
    }

    // Check the user's permissions.
    if (isset($_POST['post_type']) && 'page' == $_POST['post_type']) {
        if (!current_user_can('edit_page', $post_id)) {
            return;
        }
    } else {
        if (!current_user_can('edit_post', $post_id)) {
            return;
        }
    }

    $checkarray = array();
    $slugarray = array();
    if(!empty($_POST[DHARMA_TALKS_TRAILER_TITLE_META_KEY]) && !empty($_POST[DHARMA_TALKS_TRAILER_URL_META_KEY])){
        $checkarray["trailertitle"] = $_POST[DHARMA_TALKS_TRAILER_TITLE_META_KEY];
        $checkarray["trailerurl"]   = $_POST[DHARMA_TALKS_TRAILER_URL_META_KEY];
        $checkarray["trailertl"]    = $_POST[DHARMA_TALKS_TRAILER_TIME_LENGTH_META_KEY];
        $checkarray["trailerslug"]  = sanitize_title($_POST[DHARMA_TALKS_TRAILER_TITLE_META_KEY]);
    }
    $checkarray["title"] = $_REQUEST["dharma_talks_video_title"];
    $checkarray["url"]   = $_REQUEST["dharma_talks_video_url"];
    $checkarray["tl"]    = $_REQUEST["dharma_talks_video_time_length"];
    $pdfcheck["pdf"]     = $_REQUEST["upload_file_pdf_video"];
    
    for($i = 0; $i < count($checkarray); $i++){
         if(empty($checkarray["title"][$i]) && !empty($checkarray["url"][$i])){
             echo $checkarray["title"][$i] = "videos-".$post_id;
         }
     }
    
    $slugarraynew = array();
    $slugarraynew[sanitize_title($_POST[DHARMA_TALKS_TRAILER_TITLE_META_KEY])][] = "-";
    foreach($pdfcheck["pdf"] as $pdf){
        if (!empty($pdf)){
            $upload_dir = wp_upload_dir();
            $upload_baseurl = $upload_dir['baseurl'];
            $background_file_url = $pdf;
            $file_array = explode($upload_baseurl, $background_file_url);
            $filepdf = substr($file_array[1], 1);
            $checkarray["pdfs"][] = $filepdf;
        }else{
           
            $checkarray["pdfs"][] = ''; 
        }
    }
    //pr($checkarray["pdfs"]);
    foreach($checkarray["title"] as $title){
        $slug = sanitize_title($title);
        $slugarraynew[$slug][] = '-';
         if(array_key_exists($slug, $slugarraynew)){
            if(!empty($title) && count($slugarraynew[$slug]) > 1){
                    $slug = sanitize_title($title)."-".(count($slugarraynew[$slug])-1);
            }
            $checkarray["slugs"][] = $slug; 
        }
    }
    
    $results_json = json_encode($checkarray);
    update_post_meta($post_id, "videos_dharmatalks", $results_json);
    update_post_meta($post_id, "countervideos_dharmatalks", $counter_addmore);
    $home_featured_post = isset($_POST['home_featured']) ? $_POST['home_featured'] : "";
    update_post_meta($post_id, HOME_FEATURED_META_KEY, $home_featured_post);
}

