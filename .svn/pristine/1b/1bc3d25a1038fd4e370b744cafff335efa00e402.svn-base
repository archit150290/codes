@mixin dept-hover($dept-color) {
  a:hover {
    color: $dept-color;
  }
}

@mixin video-hover($dept-color) {
  &:hover {

    #video-outline,
    #video-play {
      fill: $dept-color;
    }

    #video-fill {
      fill: $clr-black;
    }
  }
}

@mixin header-offset($type: padding, $offset: 0) {

  @if $type == padding {
    padding-top: $header-height-mobile + $offset;

    @include media($tablet-up) {
      padding-top: $header-height-tablet + $offset;
    }

    @include media($wide-up) {
      padding-top: $header-height-wide + $offset;
    }

  } @else {
    margin-top: $header-height-mobile + $offset;

    @include media($tablet-up) {
      margin-top: $header-height-tablet + $offset;
    }

    @include media($wide-up) {
      margin-top: $header-height-wide + $offset;
    }
  }
}
