//font smoothing
@mixin font-smoothing($value: antialiased) {
  @if $value == antialiased {
    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased;
    text-rendering: optimizeLegibility;
  } @else {
    -moz-osx-font-smoothing: auto;
    -webkit-font-smoothing: subpixel-antialiased;
    text-rendering: optimizeLegibility;
  }
}

@mixin svg-embed($width, $height: $width) {
  @include size($width $height);
  margin-left: $width / 2 * -1;
  margin-top: $height / 2 * -1;
}

@mixin svg-bg {
  background-position: center;
  background-size: contain;
}

%card {
  background-color: $clr-white;
  box-shadow: $base-box-shadow;
  margin-bottom: $base-spacing;
}

@mixin card {
  background-color: $clr-white;
  box-shadow: $base-box-shadow;
  margin-bottom: $base-spacing;
}

@mixin topic-1line {
  border-left: 2px solid $clr-rule;
  display: inline-block;
  margin-left: $small-spacing;
  margin-top: 0;
  padding-left: $small-spacing;
}

@mixin dept-button($clr-dept) {
  @extend %dept-button;

  a {
    background-color: $clr-dept;
    border: 1px solid $clr-dept;

    &:hover {
      color: $clr-dept;
      background-color: $clr-white;
    }
  }
}

@mixin dept-hover-helper($dept-element: 'article') {
  #{$dept-element}.trikedaily {
    a:hover { color: $clr-trikedaily;
      svg { fill: $clr-trikedaily; } }
  }

  #{$dept-element}.ebooks {
    a:hover { color: $clr-ebooks;
      svg { fill: $clr-ebooks; } }
  }

  #{$dept-element}.filmclub {
    a:hover { color: $clr-filmclub;
      svg { fill: $clr-filmclub; } }
  }

  #{$dept-element}.magazine {
    a:hover { color: $clr-magazine;
      svg { fill: $clr-magazine; } }
  }

  #{$dept-element}.dharmatalks {
    a:hover { color: $clr-dharmatalks;
      svg { fill: $clr-dharmatalks; } }
  }

  #{$dept-element}.filmfestival {
    a:hover { color: $clr-filmfestival;
      svg { fill: $clr-filmfestival; } }
  }
}

