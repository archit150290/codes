.related-posts {
  @extend %stack;
  @include dept-hover-helper;

  @include media($tablet-up) {
    @include padding(null $base-spacing)
  }

  main {
    @extend %posts_3x1;
  }

  article {
    @include clearfix;
    @include position;

    &.dharmatalks,
    &.filmclub,
    &.filmfestival {
      figure {
        @extend %video-figure_small;
      }
    }

    &.dharmatalks {
      figure {
        @include video-hover($clr-dharmatalks);
      }

      address {
        @extend %dharmatalks-speaker;
        font-size: 1.5em;
        line-height: 1.3;
      }
    }

    &.filmclub {
      figure {
        @include video-hover($clr-filmclub);
      }
    }

    &.filmfestival {
      figure {
        @include video-hover($clr-filmfestival);
      }
    }

  }

  h2 {
    @include clearfix;
    display: table;
  }

  main h1 {
    @include media($wide-up) {
      font-size: 1.5em !important;
    }
  }

  .icon {
    @extend %marquee-aside-icon;
    display: block;
  }

  .dept {
    display: table-cell;
    vertical-align: middle;
  }

  .topic {
    display: block;
  }
}
