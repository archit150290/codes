#{$all-buttons} {
  @include padding($small-spacing $base-spacing $small-spacing - em(2px));
  appearance: none;
  background-color: $secondary-background-color;
  border: 1px solid $action-color;
  border-radius: $base-border-radius;
  color: $action-color;
  cursor: pointer;
  display: inline-block;
  font-family: $base-font-family;
  font-size: $base-font-size;
  line-height: 1.2;
  text-decoration: none;
  user-select: none;
  vertical-align: middle;
  white-space: nowrap;

  &:hover,
  &:focus {
    background-color: $action-color;
    color: $clr-white;
  }

  &:disabled {
    cursor: not-allowed;
    opacity: 0.5;

    &:hover {
      background-color: $action-color;
    }
  }
}

%base-button {
  @include transition($base-transition);
  background-color: $clr-white;
  border: 1px solid $clr-red;
  color: $clr-red;
  letter-spacing: .1em;
  text-transform: uppercase;

  &:hover {
    background-color: $clr-red;
    color: $clr-white;
  }
}

%dept-button {
  @include margin($base-spacing null null);
  font-size: 1em;
  letter-spacing: .1em;
  line-height: 1;
  text-align: center;
  text-transform: uppercase;

  a {
    @include transition($base-transition);
    @include padding($small-spacing $base-spacing $small-spacing - em(2px));
    color: $clr-white;
    display: inline-block;

    &:hover {
      background-color: $clr-white;
    }
  }
}

svg {
  @include position(absolute, 50% null null 50%);
  @include transition(all #{$base-duration} #{$base-timing});
}
