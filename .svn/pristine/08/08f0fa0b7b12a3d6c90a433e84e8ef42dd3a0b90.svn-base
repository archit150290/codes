    function save_filmfest_meta_box_data($post_id) {

        
        
        if (!isset($_POST['filmfest_meta_box_nonce'])) {
            return;
        }
        if (!wp_verify_nonce($_POST['filmfest_meta_box_nonce'], 'filmfest_save_meta_box_data')) {
            return;
        }
        if (defined('DOING_AUTOSAVE') && DOING_AUTOSAVE) {
            return;
        }
        if (isset($_POST['post_type']) && 'page' == $_POST['post_type']) {
            if (!current_user_can('edit_page', $post_id)) {
                return;
            }
        } else {
            if (!current_user_can('edit_post', $post_id)) {
                return;
            }
        }

        $filmfest_homefeatured = sanitize_text_field($_POST['home_featured_filmfest_metakey']);
        update_post_meta($post_id, HOME_FEATURED_META_KEY, $filmfest_homefeatured);

        $filmfest_shorttrailer = stripslashes(esc_textarea(($_POST['film_festival_meta_short_trailer'])));
        update_post_meta($post_id, 'meta_type_filmfest_shorttrailer', $filmfest_shorttrailer);

      
        $filmfest_video1 = stripslashes(esc_html($_POST['film_festival_meta_video1']));
        update_post_meta($post_id, 'meta_type_filmfest_video1', $filmfest_video1);

        $filmfest_video2 = stripslashes(esc_html($_POST['film_festival_meta_video2']));
        update_post_meta($post_id, 'meta_type_filmfest_video2', $filmfest_video2);

        $filmfestauthorname = sanitize_text_field($_POST['filmfest_authors_name_metabox']);
        $filmfestauthorselect = sanitize_text_field($_POST['filmfest_authors_select_metabox']);
        
        $filmclub_directorname = sanitize_text_field($_POST['filmfest_directors_name_metabox']);
        $filmclubYear = sanitize_text_field($_POST['filmfest_years_metabox']);
        
        update_post_meta($post_id, FILMFEST_AUTHORS_NAME_METABOX, $filmfestauthorname);
        update_post_meta($post_id, FILMFEST_AUTHORS_SELECT_METABOX, $filmfestauthorselect);
        update_post_meta($post_id, FILMFEST_DIRECTOR_NAME_METABOX, $filmclub_directorname);
        update_post_meta($post_id, FILMFEST_YEAR_METABOX, $filmclubYear);
        
        $filmfest_country = sanitize_text_field($_REQUEST['filmfest_country']);
        update_post_meta($post_id, "filmfest_country", $filmfest_country);
    }

    add_action('save_post', 'save_filmfest_meta_box_data');

